<h1 class="form-title">Registro</h1>

<div class="form-container">
  <%= form_with model: @user, local: true do |f| %>
    <div>
      <%= f.label :name, "Nombre", class: "form-label" %>
      <%= f.text_field :name, class: "form-input" %>
    </div>

    <div>
      <%= f.label :email, "Correo electrónico", class: "form-label" %>
      <%= f.email_field :email, class: "form-input" %>
    </div>

    <div>
      <%= f.label :password, "Contraseña", class: "form-label" %>
      <%= f.password_field :password, class: "form-input" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Confirmar contraseña", class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-input" %>
    </div>

    <div>
      <%= f.submit "Registrarse", class: "form-button" %>
    </div>
  <% end %>
</div>

